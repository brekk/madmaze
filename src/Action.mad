import type {Event} from "@/Event"

export type Action a b c
  = Command(a, b, c)
  | InvalidAction(a, b)
  | UnknownAction

export alias StandardAction a = Action Integer String (Event a)

export alias Actionable actionType = {
  actions :: List (StandardAction actionType)
}

getActionName :: Action a b c -> b
export getActionName = (
  where {
    Command(id, name, step) => name
    InvalidAction(id, name) => name
  }
)

